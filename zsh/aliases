# tmux
alias tmux='TERM=screen-256color-bce tmux'

# adds git aliases
alias gs='git status '
alias gss='git status -s '
alias ga='git add '
alias gb='git branch '
alias gc='git commit '
alias gd='git diff '
alias go='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'
alias gh='git hist '
alias gist='git hist '
alias gitup='git submodule foreach git pull origin master'

alias got='git '
alias get='git '

# Quick jump to ruby directory
alias rp='ruby -r pry '

# Quick open of Rails Learning Checklist
alias learn='mvim ~/Code/Ruby/things_to_work_on/README.md'

# Use to find rails server accidentally left running
alias rl='lsof | grep IPv4'
