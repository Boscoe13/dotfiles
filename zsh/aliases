alias l='ls -al'

# adds git aliases
alias gs='git status '
alias gss='git status -s '
alias ga='git add '
alias gb='git branch '
alias gc='git commit '
alias gd='git diff '
alias co='git checkout '
alias gk='gitk --all&'
alias gx='gitx --all'
alias gh='git hist '
alias gist='git hist '
alias gitup='git submodule foreach git pull origin master'

# postgres
alias pgstatus='pg_ctl status -D /db/postgres'
alias pgstart='pg_ctl -D /db/postgres -l /db/postgres/server.log start'
alias pgstop='pg_ctl -D /db/postgres -l /db/postgres/server.log stop'
alias blendpgstart='pg_ctl -o "-p 5433" -D /db/blend -l /db/postgres/server.log start'
alias blendpgstop='pg_ctl -o "-p 5433" -D /db/blend -l /db/postgres/server.log stop'
alias pglist='ps -ef | grep postgres'

# make ipython run inside virtualenv when possible
alias ipython="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
# python virtualenvwrapper aliases
alias ve.workon='workon'
alias ve.deactivate='deactivate'
alias ve.mk='mkvirtualenv'
alias ve.rm='rmvirtualenv'
alias ve.switch='workon'
alias ve.add2virtualenv='add2virtualenv'
alias ve.cdsitepackages='cdsitepackages'
alias ve.cd='cdvirtualenv'
alias ve.ls='lssitepackages'

# python pyc remove
alias cleanpyc='find . -name "*.pyc" -print0 | xargs -0 -n1 rm'

# directory traversal
alias ....='cd ../../../'

# search for process
alias ps.find='ps -ef | grep'

# make and cd into directory
function mcd () {
  mkdir -p "$1" && cd "$1";
}
